model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  username    String
  password    String
  roleId Int 
  role  Role @relation(fields: [roleId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
model Role {
  id Int @id @default(autoincrement())
  name String
  users User[]
  permissions Permission[]
}
model Permission {
  id Int @id @default(autoincrement())
  name String @unique
  roleId Int?
  role  Role?   @relation(fields: [roleId], references: [id])
}